<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyTitle>Neo.SmartContract.Framework</AssemblyTitle>
    <AssemblyName>Neo.SmartContract.Framework</AssemblyName>
    <PackageId>Neo.SmartContract.Framework</PackageId>
    <Description>Neo.SmartContract.Framework</Description>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="17.8.3" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="build\*" PackagePath="build\" />
    <Content Include="buildMultiTargeting\*" PackagePath="buildMultiTargeting\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="**/*.cs">
      <Pack>true</Pack>
      <PackagePath>src</PackagePath>
    </Compile>
  </ItemGroup>

</Project>
